<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Test Suite" verbose="2" parallel="methods" thread-count="4">

    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
        <listener class-name="com.automation.listeners.AllureListener"/>
        <listener class-name="com.automation.listeners.ExtentReportListener"/>
    </listeners>

    <test name="Parallel Tests">
        <packages>
            <package name="com.automation.tests.*"/>
        </packages>
    </test>

</suite>
